{
  "manifest_version": 3,
  "name": "Site Blocker",
  "description": "トグルで任意のサイトをブロック／解除します",
  "version": "1.1",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Site Blocker"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ]
}
